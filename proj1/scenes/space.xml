<lxs>
    <scene root="saturn" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="5" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="testCamera" near="5" far="500" angle="30">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="saturn-ring" file="scenes/images/saturn_ring.jpg" />
        <texture id="saturn-planet" file="scenes/images/saturn_planet.jpg" />
        <texture id="stargate" file="scenes/images/stargate.png" />
    </textures>

    <materials>
        <material id="whiteMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>
        <material id="red" shininess="10">
            <emission r="0.2" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1" b="1" a="1.0" />
            <diffuse r="0.7" g="0.0" b="0.0" a="1.0" />
            <specular r="0.7" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="10" z="5" /><!--
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />-->
        </transformation>
    </transformations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="-3" y1="0" z1="0" x2="3" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="-2" y1="-2" x2="2" y2="2" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="28" stacks="10"/>
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="8" slices="20" loops="40"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="4" slices="30" stacks="10"/>
        </primitive>
    </primitives>

    <components>
        <component id="circle">
            <transformation>
                <scale x="4" y="4" z="0.2" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="stargate" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="ring">
            <transformation>
                <scale x="0.5" y="0.5" z="0.3" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="saturn-ring" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>
        <component id="wormhole">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <componentref id="circle" />
                <componentref id="ring" />
            </children>
        </component>
        <component id="space-laser">
            <transformation>
                <scale x="0.05" y="0.05" z="0.5" />
            </transformation>
            <materials>
                <material id="red" />
            </materials>
            <texture id="none" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>
        <component id="saturn-ring">
            <transformation>
                <rotate axis="x" angle="90" />
                <scale x="1" y="1" z="0.0001" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="saturn-ring" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>
        <component id="saturn-sphere">
            <transformation>
                <scale x="5" y="5" z="5" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="saturn-planet" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="saturn">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <componentref id="saturn-sphere" />
                <componentref id="saturn-ring" />
            </children>
        </component>
    </components>
</lxs>